{% extends "base.html.twig" %}
{% block body %}


  <!-- ***** Header Area Start ***** -->
  {% block header %}
  <header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <a href="/" class="logo">
                        <img src="assets/images/logo.png" alt="">
                    </a>
                    
                    {% block menu %}
                        <ul class="nav">
                          <li><a href="/" class="active">Main</a></li>
                          <li><a href="/listaProductos">Lista Productos</a></li>
                          <li><a href="details.html"></a></li>
                          <li><a href="streams.html">Streams</a></li>
                          <li><a href="profile.html">Profile <img src="assets/images/profile-header.jpg" alt=""></a></li>
                      </ul>   
                      <a class='menu-trigger'>
                          <span>Menu</span>
                      </a>
                    {% endblock menu %}
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
  </header>
  {% endblock header %}

  {% block container %}
    <!-- ***** Header Area End ***** -->

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-content">

          <!-- ***** Banner Start ***** -->
          <div class="main-banner">
            <div class="row">
              <div class="col-lg-7">
                <div class="header-text">
                  <h6>{{description}}</h6>
                  <h4>{{title}}</h4>
                  <div class="main-button">
                    <a href="/">Main</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
          <!-- ***** Banner End ***** -->
  {% endblock container %}


{% endblock body %}